
<div class="jumbotron-index m-5 mt-0">
<div class="jumbotron ">
  <h4>Title: <%= @bug.title %> </h4>
  <h4>Status: <%= @bug.piece_status%> </h4>
  <h4>Description:
  <%= @bug.description.nil? ? "Not Available" : @bug.description   %>
   </h4>
   <h4>Deadline:
  <%= @bug.deadline.nil? ? "Not Available" : @bug.deadline   %>
   </h4>
  <h4>Screenshot:
    <% if (@bug.screenshot.url.nil?) %>
      <span> Not Available </span>
     <% else %>
     <br/>
   <%= image_tag(@bug.screenshot.url, size: "500x250", alt: "Screenshot Image")  %></h4>
   <% end %>
   <h4>Type: <%= @bug.type%> </h4>
  <h4>Project ID: <%= @bug.project_id%> </h4>
  <br>

  <p class="lead">
   <%= link_to "Show Bugs List", code_pieces_path, class:"btn btn-dark" %>


</div>

