<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="vh-50 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-success text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <div class="form-outline form-white mb-4">
                <%# <input type="email" id="typeEmailX" class="form-control form-control-lg" /> %>
                 <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg", id: "typeEmailX", placeholder:"Email" %>
              </div>

              <div class="form-outline form-white mb-4">
                <%# <input type="password" id="typePasswordX" class="form-control form-control-lg" /> %>
                <%= f.password_field :password, autocomplete: "current-password", id: "typePasswordX", class: "form-control form-control-lg", placeholder:"Password"  %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field mb-5">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <%# <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p> %>

              <%# <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button> %>
               <%= f.submit "Log in", class:"btn btn-outline-light btn-lg px-5" %>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>

            </div>

            <div>
            <%= render "devise/shared/links" %>
              <%# <p class="mb-0">Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a>
              </p> %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% end %>
