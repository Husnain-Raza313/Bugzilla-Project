<h1 class="m-3"><%= current_user.name %>'s Assigned Bugs </h1>
<div class="m-3">
  <table class="table table-hover table-striped table-bordered">
    <thead >
      <tr class="table-dark">
        <%= render "bugs/headings"%>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @bugs.each do |bug| %>
      <tbody>
        <tr>
          <%= render "bugs/columns", bug: bug %>
          <td><%= link_to "Show ", bug_path(bug.id), class:"btn btn-warning" %></td>
          <td><%= link_to "Edit Status", edit_bug_path(bug), class:"btn btn-secondary" %></td>
          <td><%= link_to "Remove", bug_user_path(bug.id), class:"btn btn-danger", method: :delete %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
  <%= link_to "Back To Projects", view_projects_path(current_user.id), class:"btn btn-success" %>
</div>


