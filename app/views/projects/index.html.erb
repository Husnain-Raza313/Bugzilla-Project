<div class="m-3">
  <table class="table table-hover table-striped table-bordered">
    <thead >
      <tr class="table-dark">
        <%= render "user_projects/headings" %>
        <th scope="col"></th>
      </tr>
    </thead>
    <% @projects.each do |project| %>
      <tbody>
        <tr>
          <%= render "user_projects/columns" , project: project %>
          <% if current_user.manager? && current_user.id == project.user_id %>
            <td><%= link_to "Show ", project, class:"btn btn-warning" %></td>
            <td><%= link_to "Edit ", edit_project_url(project.id), class:"btn btn-primary" %></td>
            <td><%= button_to "Destroy ", project, method: :delete, class:"btn btn-danger" %></td>
          <% else %>
            <td><button class="btn btn-warning disabled"> Show</button></td>
            <td><button class="btn btn-primary disabled"> Edit</button></td>
            <td><button class="btn btn-danger disabled"> Destroy</button></td>
          <% end %>
        </tr>
      </tbody>
    <% end %>
  </table>
  <% if current_user.manager? %>
    <%= link_to "New Project", new_project_path, class:'btn btn-secondary'%>
  <% end %>
  <%= link_to "Back To Home", authenticated_root_path, class:'btn btn-primary'%>
</div>

