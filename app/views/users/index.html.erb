<h1 class="m-3">Manager's Panel</h1>
<div class="container m-5">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'home/userpfp' %>
    </div>
    <div class="col-lg-9">
        <h4>Users List</h4>
        <table class="table table-hover table-striped table-bordered">
          <thead >
            <tr class="table-dark">
              <th scope="col">User ID</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">User Type</th>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <% if (user.manager?) %>
            <% else %>
              <tbody>
                <tr>
                  <th scope="row"><%= user.id%></th>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.user_type.capitalize %></td>
                  <td><%= link_to "Show ", user_path(user), class:"btn btn-primary" %></td>
                  <td><%= link_to "Remove Projects", user_user_projects_path(user.id), class:"btn btn-danger" %></td>
                  <td><%= link_to "Assign Projects", user_project_path(user.id), class:"btn btn-success" %></td>
                </tr>
              </tbody>
            <% end %>
          <% end %>
        </table>
        <p class="lead">
          <%= link_to "Show Projects", projects_path, class:"btn btn-primary btn-lg" %>
          <%= link_to "Create A Project", new_project_path, class:"btn btn-warning btn-lg" %>
        </p>
    </div>
  </div>
</div>
